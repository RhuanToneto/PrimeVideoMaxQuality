{
  "manifest_version": 3,
  "name": "PrimeVideoMaxQuality",
  "version": "1.0.0",
  "description": "Força a melhor qualidade de reprodução automaticamente no Prime Video.",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    },
    "default_popup": "popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.primevideo.com/*"
      ],
      "run_at": "document_start",
      "js": [
        "src/script.js"
      ]
    }
  ]
}
